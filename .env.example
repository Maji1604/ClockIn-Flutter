# ==============================================
# CREOLEAP HRMS - Environment Variables Template
# ==============================================
# Copy this file as .env and fill in your actual values
# This file shows the structure of required environment variables

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
APP_NAME=Creoleap HRMS
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# ==============================================
# API CONFIGURATION
# ==============================================
# Base URL for your HRMS API
API_BASE_URL=https://your-api-domain.com/v1
API_VERSION=v1
API_TIMEOUT=30000
API_KEY=your_api_key_here

# Connection Timeouts (in milliseconds)
CONNECT_TIMEOUT=30000
RECEIVE_TIMEOUT=30000

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_min_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
SALT_ROUNDS=12

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Database Connection (if using direct DB connection)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=false

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================
# Email Service (e.g., SendGrid, Mailgun)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Your Company HRMS

# SMS Service (e.g., Twilio)
SMS_SERVICE_SID=your_sms_service_sid
SMS_AUTH_TOKEN=your_sms_auth_token
SMS_PHONE_NUMBER=+1234567890

# File Storage (e.g., AWS S3, Google Cloud Storage)
STORAGE_SERVICE_KEY=your_storage_service_key
STORAGE_BUCKET_NAME=your-files-bucket
STORAGE_REGION=us-east-1

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ==============================================
# OAUTH & SOCIAL LOGIN
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft OAuth (for Office 365 integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# ==============================================
# PAYMENT CONFIGURATION (for payroll)
# ==============================================
# Stripe (for payment processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================
# Time tracking API
TIME_TRACKING_API_KEY=your_time_tracking_api_key

# Biometric API
BIOMETRIC_API_KEY=your_biometric_api_key
BIOMETRIC_API_URL=https://api.biometric-service.com

# HR Analytics Service
ANALYTICS_API_KEY=your_analytics_api_key

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
# Feature Flags
ENABLE_BIOMETRIC_AUTH=false
ENABLE_FACIAL_RECOGNITION=false
ENABLE_GEOLOCATION_TRACKING=true
ENABLE_OFFLINE_MODE=true

# Testing
TEST_USER_EMAIL=test@yourcompany.com
TEST_USER_PASSWORD=TestPassword123!